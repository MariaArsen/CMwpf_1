        <Button Content="2" HorizontalAlignment="Left" Margin="180,157,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="260,157,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="100,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="180,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="260,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="100,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard" Click="Button_Click"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="180,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="260,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="480,157,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="%" HorizontalAlignment="Left" Margin="480,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="480,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="_" HorizontalAlignment="Left" Margin="560,157,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="*" HorizontalAlignment="Left" Margin="560,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="RomanD"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="560,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="0" HorizontalAlignment="Left" Margin="400,157,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="00" HorizontalAlignment="Left" Margin="400,232,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <Button Content="," HorizontalAlignment="Left" Margin="400,307,0,0" VerticalAlignment="Top" Width="75" Height="70" FontSize="24" FontFamily="Poor Richard"/>
        <TextBlock x:Name="Калькулятор" HorizontalAlignment="Left" Margin="100,23,0,0" TextWrapping="Wrap" Text="Калькулятор" VerticalAlignment="Top" Width="247" Height="25
                   " FontSize="16"/>

    </Grid>
